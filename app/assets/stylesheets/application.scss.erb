@import "bootstrap-sass-official/assets/stylesheets/bootstrap";

@import "colors";
@import "fonts";
@import "buttons";
@import "layout";

@import "components/home";
@import "components/site_header";
@import "components/info_cards";

@import "wiki.scss";

.content {
  max-width: 1440px;
  min-height: 630px;
  padding-left: 30px;
  padding-right: 30px;
  margin: auto;
  margin-bottom: 30px;
}

.hompage-button-wrapper {
  position: absolute;
  right: 10px;
  top: 15px;
}

.wiki-enter-btn {
  font-size: 22px;
  font-family: 'Crete Round';
}

.splash-page {
  width: 100%;
  background-color: $layout-background;
}

.alert {
  position: absolute;
  top: 80px;
  left: 5px;
}

.logout-link {
  padding: 5px;
  height: 30px;
  width: 100%;
  background-color: $header-color;
  a {
    color: white;
  }
}

#faerunMap {
  height: 600px;
  width: 800px;
  margin: auto;
  margin-bottom: 100px;
}

.faerun-title {
  position: absolute;
  color: white;
  right: 20px;
  top: 0;
  font-family: 'Crete Round';

  @media(max-width: 600px) {
    display: none;
  }
}

.map-image {
  margin-top: -35px;
  margin-bottom: 30px;
  width: 100%;
}

.subtitle-text {
  margin-bottom: 40px;
  margin-top: -10px;
}

.splash-screen {
  width: 1024px;
  margin: auto;
}
