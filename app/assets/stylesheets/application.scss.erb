@import "angular-material/angular-material.scss";

@import "colors";
@import "fonts";
@import "buttons";
@import "layout";

@import "components/home";
@import "components/campaign_selector";
@import "components/site_header";
@import "components/info_cards";

@import "wiki.scss";

html, body {
  height: 100%;
  margin: 0;
}

.content-wrapper {
  background-color: $layout-background;
  margin-top: 45px;
}

.clickable-text {
  cursor: pointer;
}

.alert {
  position: absolute;
  top: 80px;
  left: 5px;
}

.logout-link {
  padding: 5px;
  height: 30px;
  width: 100%;
  background-color: $header-color;
  a {
    color: white;
  }
}

.subtitle {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 10px;
}

.large-title {
  font-size: 32px;
  text-decoration: none;
  font-family: $title-font;
}

.page-title {
  position: absolute;
  top: 0;
  width: 100%;
  text-align: center;
}
